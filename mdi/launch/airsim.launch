<?xml version="1.0"?>
<launch>
    <arg name="package" value="mdi"/>
    <arg name="package_path" value="$(find mdi)"/>
    <arg name="catkin_ws_path" default="$(optenv SOURCED_WS ~/catkin_ws)"/>

    <node pkg="$(arg package)" type="run_airsim.sh" name="run_airsim" />
    <node
        pkg="$(arg package)"
        type="make_px4_airsim.sh"
        name="make_px4_airsim"
        args="$(arg catkin_ws_path)"/>

    <include file="$(find mavros)/launch/px4.launch">
        <arg name="fcu_url" default="udp://:14550@127.0.0.1:14557"/>
    </include>
</launch>